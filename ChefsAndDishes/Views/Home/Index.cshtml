@{
    ViewData["Title"] = "Home Page";
}

@model Chef

<div class="text-center">
    <h4><a href="/">Chefs</a> | <a href="/Dishes">Dishes</a></h4>
    <a href="/ChefView">Add a new Chef!</a>
    <h2>Check our roster of Chefs!</h2>
</div>
<div class="col-sm-8 bg-dark text-white">
    <table class="table-striped">
        <thead>
            <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Age</th>
                <th scope="col"># of Dishes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Chef chef in @ViewBag.allchefs)
            {
                <tr>
                    <td>@chef.FirstName</td>
                    <td>@chef.LastName</td>
                    <td>@chef.Age</td>
                    <td>@chef.Dishes.Count</td>
                </tr>
            }
            <tr>
                <th scope="row"></th>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <th scope="row"></th>
                <td></td>
                <td></td>
            </tr>
        </tbody>
    </table>
</div>